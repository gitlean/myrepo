<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                       http://www.springframework.org/schema/beans/spring-beans.xsd">
  
	<bean id="
	client " class="bing.server.IHelloService" factory-bean="clientFactory"
	factory-method="create" />

<bean id="clientFactory" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
	<property name="serviceClass" value="bing.server.IHelloService" />
	<property name="address"
		value="http://localhost:8080/cxfSpringDemo3/ws/helloService" />
</bean>


<bean id="webClient" class="org.apache.cxf.jaxrs.client.WebClient"
	factory-method="create">
	<constructor-arg type="java.lang.String"
		value="http://localhost:8080/cxfSpringDemo3/ws/rest/" />
</bean>
</beans>
